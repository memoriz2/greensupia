generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 간단한 Todo 스키마 (사용자 없이)
model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean  @default(false)
  priority    Priority @default(MEDIUM)
  dueDate     DateTime? // 추가: 마감일
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

// Greensupia 기능 모델들
model OrganizationChart {
  id        Int      @id @default(autoincrement())
  imageUrl  String   @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model History {
  id          Int      @id @default(autoincrement())
  year        String   // 연도 (예: "2024", "2023-2024")
  description String   @db.Text
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BannerNews {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  imageUrl  String?
  linkUrl   String?
  startDate DateTime?
  endDate   DateTime?
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 추가 모델들
model Video {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  @db.Text
  videoUrl    String   @db.Text
  thumbnailUrl String?
  duration    Int?     // 초 단위
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Banner {
  id        Int      @id @default(autoincrement())
  title     String
  imageUrl  String   @db.Text
  linkUrl   String?
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Greeting {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.LongText // HTML 콘텐츠를 위한 LongText
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 공지사항 모델
model Notice {
  id          Int      @id @default(autoincrement())
  title       String
  content     String   @db.LongText // TipTap HTML 콘텐츠
  author      String   @default("관리자") // 작성자
  isPinned    Boolean  @default(false) // 상단고정 여부
  viewCount   Int      @default(0) // 조회수
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // 파일 첨부 관계
  attachments NoticeAttachment[]
}

// 공지사항 첨부파일 모델
model NoticeAttachment {
  id        Int      @id @default(autoincrement())
  noticeId  Int      // 공지사항 ID
  fileName  String   // 원본 파일명
  filePath  String   // 저장된 파일 경로
  fileSize  Int      // 파일 크기 (bytes)
  mimeType  String   // MIME 타입
  downloadCount Int  @default(0) // 다운로드 횟수
  createdAt DateTime @default(now())
  
  // 관계 설정
  notice    Notice   @relation(fields: [noticeId], references: [id], onDelete: Cascade)
}