{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p 3000",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset && prisma db push && prisma db seed",
    "db:setup": "bash scripts/dev-setup.sh",
    "db:setup:skip-build": "bash scripts/dev-setup.sh --skip-build",
    "db:setup:clean": "bash scripts/dev-setup.sh --clean-cache",
    "db:setup:reset": "bash scripts/dev-setup.sh --full-reset",
    "db:fix": "bash scripts/dev-setup.sh --clean-cache --skip-build",
    "db:setup:bash": "bash scripts/dev-setup.sh",
    "db:setup:bash:clean": "bash scripts/dev-setup.sh --clean-cache",
    "db:setup:bash:reset": "bash scripts/dev-setup.sh --full-reset",
    "dev:clean": "npm run db:setup:clean && npm run dev",
    "dev:reset": "npm run db:setup:reset && npm run dev",
    "dev:auto": "npm run db:fix && npm run dev",
    "dev:smart": "npm run db:setup:clean && npm run dev",
    "dev:full": "npm run db:setup:reset && npm run dev",
    "prod:setup": "bash scripts/dev-setup.sh --production",
    "prod:start": "bash scripts/dev-setup.sh --production --start",
    "prod:build": "bash scripts/dev-setup.sh --production --skip-build",
    "prod:deploy": "bash scripts/dev-setup.sh --production --start",
    "fix:typescript": "bash scripts/dev-setup.sh --auto-fix",
    "fix:all": "bash scripts/dev-setup.sh --auto-fix --clean-cache"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@tiptap/extension-color": "^3.0.7",
    "@tiptap/extension-highlight": "^3.0.7",
    "@tiptap/extension-image": "^3.0.7",
    "@tiptap/extension-link": "^3.0.7",
    "@tiptap/extension-table": "^3.0.7",
    "@tiptap/extension-table-cell": "^3.0.7",
    "@tiptap/extension-table-header": "^3.0.7",
    "@tiptap/extension-table-row": "^3.0.7",
    "@tiptap/extension-text-align": "^3.0.7",
    "@tiptap/extension-text-style": "^3.0.7",
    "@tiptap/extension-underline": "^3.0.7",
    "@tiptap/pm": "^3.0.7",
    "@tiptap/react": "^3.0.7",
    "@tiptap/starter-kit": "^3.0.7",
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^3.0.2",
    "critters": "^0.0.23",
    "jose": "^6.0.12",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.2",
    "next": "15.4.2",
    "nodemailer": "^7.0.5",
    "react": "19.1.0",
    "react-colorful": "^5.6.1",
    "react-dom": "19.1.0",
    "sass": "^1.89.2",
    "tiptap-extension-resize-image": "^1.2.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.2",
    "prisma": "^6.13.0",
    "typescript": "^5"
  }
